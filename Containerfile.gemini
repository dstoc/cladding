FROM docker.io/library/rust:1.88-bookworm AS builder

WORKDIR /src
COPY mcp-run /src/mcp-run
RUN cargo build --manifest-path /src/mcp-run/Cargo.toml --release --bin run-remote

FROM debian:trixie-slim

ARG USERNAME=user
ARG UID=1000
ARG GID=1000

COPY config/cli_packages /tmp/cli_packages
COPY --from=builder /src/mcp-run/target/release/run-remote /usr/local/bin/run-with-network

RUN apt-get update \
    && apt-get install -y --no-install-recommends zsh ca-certificates npm $(sed -e 's/#.*$//' -e '/^[[:space:]]*$/d' /tmp/cli_packages) \
    && npm install -g @google/gemini-cli@latest \
    && if getent group $GID; then \
         group_name=$(getent group $GID | cut -d: -f1); \
         useradd -m -u $UID -g $GID -s /bin/bash $USERNAME; \
       else \
         groupadd -g $GID $USERNAME && \
         useradd -m -u $UID -g $GID -s /bin/bash $USERNAME; \
       fi \
    && chsh -s /bin/zsh $USERNAME \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

USER $USERNAME
WORKDIR /home/$USERNAME/workspace
CMD ["gemini"]
